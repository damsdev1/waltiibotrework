// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Config {
  key   String @id @unique
  value String
}

model User {
  id           String        @id @unique
  accessToken  String
  refreshToken String
  tokenExpiry  DateTime
}

model Connections {
  id         Int    @id @default(autoincrement())
  platform   String
  platformId String
  userId     String
  giveawayEntryId Int
  giveawayEntry GiveawayEntry @relation(fields: [giveawayEntryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  @@unique([platform, platformId, giveawayEntryId], name: "PlatformUser") // prevents same user
}

model Giveaway {
  id            Int             @id @default(autoincrement())
  interactionId String          @unique
  channelId     String
  messageId     String        @unique
  prize         String
  endTime       DateTime
  ended         Boolean         @default(false)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  subOnly       Boolean         @default(false)
  winnerUserId  String?
  GiveawayEntry GiveawayEntry[]
}

model GiveawayEntry {
  id         Int      @id @default(autoincrement())
  giveawayId Int
  userId     String
  chances    Int      @default(1)
  joinedAt   DateTime @default(now())
  giveaway   Giveaway @relation(fields: [giveawayId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  connections Connections[]
  @@unique([giveawayId, userId], name: "GiveawayUser") // prevents same user entering giveaway multiple times
}
